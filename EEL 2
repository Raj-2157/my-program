#include <stdio.h>

void main() {
    int n, i;
    float noise, sum = 0, average;

    printf("Enter the number of noise readings: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Invalid number of readings!\n");
        
    }

    for (i = 1; i <= n; i++) {
        printf("Enter noise level %d (in dB): ", i);
        scanf("%f", &noise);

        if (noise < 0) {
            printf("Invalid noise value! Please enter positive value.\n");
         
        }

        sum = sum + noise;
    }

    average = sum / n;

    printf("\nAverage Noise Level = %.2f dB\n", average);

    if (average < 30) {
        printf("Status: Very Low (Almost Silent)\n");
    } 
    else if (average >= 30 && average < 60) {
        printf("Status: Normal / Hearable\n");
    } 
    else if (average >= 60 && average < 90) {
        printf("Status: Loud\n");
    } 
    else {
        printf("Status: Too Loud / Dangerous\n");
    }

}
