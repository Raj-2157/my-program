 #include<stdio.h>
void main(){
    int noise;
    printf("Enter the noise in decibel(dB):");
    scanf("%d",&noise);
    if(noise<0){
        printf("\nInvalid noise value! Please enter positive values.");
    }
    if(noise>=0&&noise<30){
       printf("\nStatus: Very Low (Almost Silent)");
   }
   if( noise>=30&&noise<60){
       printf("\nStatus: Normal / Hearable");
   }
    if( noise>=60&&noise<90){
       printf("\nStatus: Loud");
   }
     if(noise>90){
       printf("\nStatus: Too Loud / Dangerous");
   }
}
